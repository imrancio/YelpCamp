<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <h1>Welcome to YelpCamp</h1>
    <p>View our hand-picked campgrounds all over the world</p>
    <p>
      <a class='btn btn-primary btn-lg' href="/campgrounds/new">Add New Campground</a>
    </p>
  </header>

  <div class="row">
    <div class="col-xl-12">
      <h3>Most Popular Campgrounds!</h3>
    </div>

    <% campgrounds.forEach((campground) => { %>
      <div class="col-xl-3 col-md-6">
        <figure class="figure">
          <img class="figure-img img-fluid img-thumbnail" src="<%= campground.image %>">
          <figcaption class="figure-caption text-center"><%= campground.name %></figcaption>
        </figure>
      </div>
    <% }) %>
  </div>
</div>

<% include partials/footer %>
