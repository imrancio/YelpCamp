<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <h1><i class="fas fa-tree"></i> Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds all over the world</p>
            <p>
                <a class='btn btn-primary btn-lg' href="/campgrounds/new">Add New Campground</a>
            </p>
        </header>

        <div class="row">
            <div class="col-xl-12">
                <h3>Most Popular Campgrounds!</h3>
            </div>

            <% campgrounds.forEach((campground) => { %>
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= campground.name %></h5>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-secondary center-block">More Info</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ../partials/footer %>
