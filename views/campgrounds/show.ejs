<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 2</li>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="card">
                <img class="card-img-top img-fluid" src="<%= campground.image %>" />
                <div class="card-body">
                    <h4 class="card-title mb-1 float-right">$9.00/night</h4>
                    <h4 class="card-title mb-1"><a href="#"><%= campground.name %></a></h4>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <em>Submitted by <%= campground.author.username %></em>
                    </h6>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div class="card bg-light mt-4">
                <div class="card-body py-0">
                    <div class="text-center">
                        <a class="btn btn-success m-4" href="/campgrounds/<%= campground._id %>/comments/new">Add Comment</a>
                    </div>
                    <div class="card-text">
                        <ul class="list-group list-group-flush">
                            <% campground.comments.forEach((comment) => { %>
                                <li class="list-group-item bg-light">
                                    <strong><%= comment.author.username %></strong>
                                    <span class="float-right">10 days ago</span>
                                    <p>
                                        <%= comment.text %>
                                    </p>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
