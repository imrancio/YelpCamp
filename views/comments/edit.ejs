<% include ../partials/header %>

    <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <h1 class="text-center">Edit Comment</h1>

        <div class="form-group">
            <textarea class="form-control" rows="3" name="comment[text]" placeholder="comment" autofocus><%= comment.text %></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit!</button>
        </div>

        <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </form>

