<% include ./partials/header %>

    <div class="row justify-content-center">
        <div class="col-10 col-md-6">
            <form action="/register" method="POST">
                <h1 class="text-center">Sign Up</h1>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username" required>
                </div>
                <div class="form-group">
                    <input id="password-field" class="form-control" type="password" name="password" placeholder="password" required data-toggle="popover" title="Password Strength" data-placement="bottom" data-trigger="focus" data-content="Password must be at least 8 characters, including uppercase, lowercase and number" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="adminCode" placeholder="admin code">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="firstName" placeholder="first name" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lastName" placeholder="last name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="john@doe.com" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="avatar" placeholder="avatar url">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>

<% include ./partials/footer %>
