<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10 col-md-6">
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
                <h1 class="text-center">Edit <%= user.username %></h1>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[username]" placeholder="username" value="<%= user.username %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[firstName]" placeholder="first name" value="<%= user.firstName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[lastName]" placeholder="last name" value="<%= user.lastName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="user[email]" placeholder="john@doe.com" value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="url" name="user[avatar]" placeholder="avatar url" value="<%= user.avatar %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit Profile</button>
                </div>
                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
